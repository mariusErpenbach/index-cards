<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="IndexCards.MainWindow"
        Title="Karteikarten-App" Width="800" Height="600">
    <DockPanel>
        <!-- Menüleiste -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Datei">
                <MenuItem Header="Beenden" Command="{Binding ExitCommand}" />
            </MenuItem>
        </Menu>

        <!-- Hauptbereich -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Liste der Karten -->
            <ListBox Grid.Column="0" ItemsSource="{Binding Cards}" SelectedItem="{Binding SelectedCard}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Front}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Details der ausgewählten Karte -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Vorderseite:" />
                <TextBox Text="{Binding SelectedCard.Front}" />
                <TextBlock Text="Rückseite:" />
                <TextBox Text="{Binding SelectedCard.Back}" />
                <TextBlock Text="Kategorie:" />
                <TextBox Text="{Binding SelectedCard.Category}" />
                <Button Content="Speichern" Command="{Binding SaveCommand}" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>